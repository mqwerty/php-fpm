{
  "name": "mqwerty/php",
  "type": "project",
  "license": "MIT",
  "description": "Skeleton for PHP projects",
  "authors": [
    {
      "name": "Dmitrii Elkin",
      "email": "de@mqwerty.ru"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dev\\": "src-dev"
    }
  },
  "require": {
    "php": "^7.4",
    "laminas/laminas-diactoros": "^2.4",
    "laminas/laminas-httphandlerrunner": "^2.0",
    "monolog/monolog": "^2.1",
    "mqwerty/dependency-injection": "^1.2",
    "nikic/fast-route": "^1.3",
    "symfony/console": "^5.1",
    "symfony/finder": "^5.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "codeception/codeception": "^4.1",
    "codeception/module-asserts": "^1.3",
    "codeception/module-phpbrowser": "^1.0",
    "codeception/module-rest": "^1.2",
    "phan/phan": "^3.2",
    "phpmd/phpmd": "^2.9",
    "filp/whoops": "^2.7",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "replace": {
    "symfony/polyfill-mbstring": "*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-php73": "*"
  },
  "scripts": {
    "test": "codecept run --debug",
    "test:cover": "codecept run Unit --coverage --coverage-text",
    "test:unit": "codecept run Unit --debug",
    "test:api": "codecept run Api --debug",
    "stan:md": "phpmd ./src ansi ./phpmd.xml",
    "stan:phan": "phan --color --progress-bar",
    "cs:check": "phpcs ./src --standard=PSR12",
    "cs:fix": "phpcbf ./src --standard=PSR12",
    "check": [
      "@cs:check",
      "@stan:md",
      "@stan:phan",
      "@test"
    ]
  }
}
